        if(nombreSalida!=null){
            File f = new File(nombreSalida+".txt");
            if(f!=null){
                FileWriter fw = null;
                try{
                    fw = new FileWriter(f);
                }catch(IOException ioe){
                    mensajeAlerta("IOException 1","No se ha podido iniciar el escritor.");
                }
                if(fw!=null){
                    try{
                        fw.write(datos);
                        fw.close();
